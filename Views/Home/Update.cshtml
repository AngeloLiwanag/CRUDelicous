@model Dish
<div class="text-center mb-2">
    <h1 class="display-4">Edit @Model.Name!</h1>
</div>
<a href="/" class="text-right">Home</a>
    <form class="row" asp-action="update" asp-controller="home" asp-route-id="@Model.id" method="POST">
        <div class="text-left mt-3 col d-inline">
            <div class="form-group">
            <fieldset>
                <label class="control-label" asp-for="Chef">Chef's Name</label>
                <input class="form-control" asp-for="Chef" type="text">
            </fieldset>
            </div>
            <div class="form-group">
            <fieldset>
                <label class="control-label" asp-for="Name">Name of Dish</label>
                <input class="form-control" asp-for="Name" type="text">
            </fieldset>
            </div>
            <div class="form-group">
            <fieldset>
                <label class="control-label" asp-for="Calories">Number of Calories</label>
                <input class="form-control" asp-for="Calories" type="text">
            </fieldset>
            </div>
        </div>
        <div class="col">
             <div class="form-group">
                <label asp-for="Tastiness">Tastiness</label>
                <select class="form-control" asp-for="Tastiness">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>  
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            </div>
            <button class="btn btn-primary btn-sm float-right" type="submit">Edit Dish</button>
        </div>
    </form>
</div>